@{
  Layout = "_Layout";
}

@model FoodSTore.Models.Item

<h2>Add a store</h2>

<h4>Add a store for this item to be sold at: @Html.DisplayFor(model => model.ItemName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ItemId)

  @Html.Label("Select store")
  @Html.DropDownList("StoreId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to index", "Index")</p>
